---
import Icon from 'astro-icon';
---

<div
  x-data="{ isButtonVisible: false }"
  x-init="window.addEventListener('scroll', () => { isButtonVisible = window.scrollY > 400; })"
  class="fixed bottom-4 right-4 lg:bottom-6 lg:right-6"
>
  <a
    href="#"
    x-show="isButtonVisible"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
  >
    <Icon name="icons8:up-round" class="h-12 w-12 opacity-20 lg:opacity-30" />
  </a>
</div>
