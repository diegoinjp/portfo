---
import Title from '../Title.astro';
import { Icon } from 'astro-icon';

type TestimonialType = {
  message: string;
  client: string;
  score: number;
  icon: string;
};
const testimonials: TestimonialType[] = [
  {
    message:
      'Alan works very professionally and delivers results quickly... I look forward to working with him again soon.',
    client: 'Direct client based in Mexico',
    score: 5,
    // lorempicsum
    icon: 'emojione:flag-for-mexico',
  },
  {
    message: 'Fast and reliable translator. Great communication!',
    client: 'Outsourcer based in Europe',
    score: 5,
    icon: 'emojione:flag-for-european-union',
  },
  {
    message: 'Very effective, reliable translator. We are pleased to keep working together.',
    client: 'Direct client based in Argentina',
    score: 5,
    icon: 'emojione:flag-for-argentina',
  },
  {
    message: 'Excellent and prompt service!',
    client: 'Outsourcer based in Japan',
    score: 5,
    icon: 'emojione:flag-for-japan',
  },
];
---

<div class="flex flex-col items-center gap-12 lg:gap-20">
  <Title>Reviews</Title>
  <div
    class="grid divide-y divide-primary-900/10 dark:divide-primary-300/10 lg:grid-cols-4 lg:divide-x lg:divide-y-0"
  >
    {
      testimonials.map((testimonial) => (
        <figure class="mx-auto flex max-w-lg flex-col items-center gap-6 py-8 lg:px-8 lg:py-0">
          <div class="flex flex-row gap-2">
            {[...Array(testimonial.score)].map(() => (
              <svg
                class="h-6 w-6 text-primary-600 dark:text-primary-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="skyblue"
                aria-hidden="true"
              >
                <path d="M12.0006 18.26L4.94715 22.2082L6.52248 14.2799L0.587891 8.7918L8.61493 7.84006L12.0006 0.5L15.3862 7.84006L23.4132 8.7918L17.4787 14.2799L19.054 22.2082L12.0006 18.26Z" />
              </svg>
            ))}
          </div>
          <blockquote class="text-center text-lg italic leading-loose text-primary-950/70 dark:text-primary-200/70">
            <p>{testimonial.message}</p>
          </blockquote>
          <figcaption class="flex flex-col gap-4">
            <Icon name={testimonial.icon} class="mx-auto h-12 w-12 rounded-full" />
            <div class="text-center">
              <div class="text-base font-medium">{testimonial.client}</div>
            </div>
          </figcaption>
        </figure>
      ))
    }
  </div>
</div>
