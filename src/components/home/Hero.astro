---
import Icon from 'astro-icon';
import Button from '../Button.astro';
---

<div class="h-hero relative mx-auto flex max-w-2xl items-center px-4 sm:px-6 lg:max-w-6xl lg:px-8">
  <div class="flex flex-col-reverse items-center gap-16 pb-16 lg:my-12 lg:flex-row">
    <div class="flex flex-col items-center gap-8 sm:gap-10 lg:items-start">
      <div class="flex max-w-xl flex-col items-center gap-4 sm:gap-6 lg:items-start">
        <h1
          class="text-center text-4xl font-medium tracking-tight sm:text-5xl lg:text-left lg:text-5xl"
        >
          Translator and localizer based in Japan
        </h1>
        <p class="text-lg text-primary-950/70 dark:text-primary-200/70 sm:text-xl">
          <!-- Detail-oriented professional with IT skills and a passion for global communication -->

           Japanese, English, Italian > Spanish
        </p>
      </div>
      <Button href="#contact">Contact me</Button>
    </div>
    <img class="h-auto rounded-3xl lg:w-2/4" src="hero.webp" alt="Hero picture" />
  </div>
  <a href="#profile">
    <Icon
      name="icon-park-outline:down"
      class="absolute bottom-0 left-1/2 hidden h-12 w-12 -translate-x-1/2 translate-y-1/2 transform animate-bounce lg:block"
    />
  </a>
</div>
